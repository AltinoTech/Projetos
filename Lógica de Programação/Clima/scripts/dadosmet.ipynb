import pandas as pd
import matplotlib.pyplot as plt
from google.colab import files

# === Upload do arquivo (usabndo esta função porque não uso o Colab instalado) ===
print("Selecione o arquivo CSV com os dados...")
uploaded = files.upload()
file_name = list(uploaded.keys())[0]

# === Leitura e preparação ===
df = pd.read_csv(file_name, sep=None, engine="python")
df.columns = df.columns.str.strip().str.lower()

if "data" not in df.columns:
    raise ValueError("Coluna 'data' não encontrada!")

df["data"] = pd.to_datetime(df["data"], errors="coerce", dayfirst=True)
df["ano"] = df["data"].dt.year
df["mes"] = df["data"].dt.month

# ========================================
# ITEM (a) Visualização de intervalo de dados em modo texto (com input do usuário)
# ========================================
def visualizar_intervalo():
    try:
        mi = int(input("Informe o mês inicial (1-12): "))
        ai = int(input("Informe o ano inicial: "))
        mf = int(input("Informe o mês final (1-12): "))
        af = int(input("Informe o ano final: "))
        opcao = int(input(
            "\nEscolha o que visualizar:\n"
            "1 - Todos os dados\n"
            "2 - Apenas precipitação\n"
            "3 - Apenas temperaturas\n"
            "4 - Apenas umidade e vento\n"
            "Opção: "
        ))
    except ValueError:
        print("❌ Entradas inválidas.")
        return

    # Validação
    if not (1 <= mi <= 12 and 1 <= mf <= 12):
        print("❌ Meses devem estar entre 1 e 12.")
        return

    inicio = pd.Timestamp(year=ai, month=mi, day=1)
    fim = pd.Timestamp(year=af, month=mf, day=28) + pd.offsets.MonthEnd(1)

    filtrado = df[(df["data"] >= inicio) & (df["data"] <= fim)]

    if filtrado.empty:
        print("⚠️ Nenhum dado encontrado no período informado.")
        return

    # Escolha das colunas
    if opcao == 1:
        cols = df.columns
    elif opcao == 2 and "precip" in df.columns:
        cols = ["data", "precip"]
    elif opcao == 3 and {"maxima","minima","temp_media"}.issubset(df.columns):
        cols = ["data", "maxima", "minima", "temp_media"]
    elif opcao == 4 and {"um_relativa","vel_vento"}.issubset(df.columns):
        cols = ["data", "um_relativa", "vel_vento"]
    else:
        print("❌ Opção inválida ou colunas não encontradas.")
        return

    # Exibição
    print("\n=== Dados Selecionados ===")
    print(filtrado[cols].to_string(index=False))


# ========================================
# ITEM (b) Mês mais chuvoso
# ========================================
def mes_mais_chuvoso():
    soma_mensal = df.groupby([df["ano"], df["mes"]])["precip"].sum()
    max_chuva = soma_mensal.max()
    ano, mes = soma_mensal.idxmax()
    resultado = {
        "ano": ano,
        "mes": mes,
        "precipitação_total": max_chuva
    }
    return resultado

# ========================================
# ITEM (c) Média da temperatura mínima (2006–2016)
# ========================================
def medias_minimas_mes(mes_usuario: int):
    if not 1 <= mes_usuario <= 12:
        raise ValueError("❌ O mês deve estar entre 1 e 12.")

    dicionario = {}
    for ano in range(2006, 2017):
        filtrado = df[(df["ano"] == ano) & (df["mes"] == mes_usuario)]
        if not filtrado.empty:
            media = filtrado["minima"].mean()
            chave = f"{mes_usuario:02d}/{ano}"
            dicionario[chave] = round(media, 2)
    return dicionario

# ========================================
# ITEM (d) Gráfico de barras das médias mínimas
# ========================================
def grafico_minimas(mes_usuario: int):
    dicionario = medias_minimas_mes(mes_usuario)
    if not dicionario:
        print("Sem dados disponíveis para este mês.")
        return

    plt.figure(figsize=(10, 5))
    plt.bar(dicionario.keys(), dicionario.values(), color="skyblue", edgecolor="black")
    plt.title(f"Médias da temperatura mínima - mês {mes_usuario:02d} (2006-2016)")
    plt.xlabel("Ano")
    plt.ylabel("Temperatura mínima média (°C)")
    plt.xticks(rotation=45)
    plt.show()

# ========================================
# ITEM (e) Média geral da temperatura mínima
# ========================================
def media_geral_minima(mes_usuario: int):
    dicionario = medias_minimas_mes(mes_usuario)
    if not dicionario:
        return None
    return round(sum(dicionario.values()) / len(dicionario), 2)

# ========================================
# Exemplos de uso
# ========================================
print("\n=== ITEM (b) Mês mais chuvoso ===")
print(mes_mais_chuvoso())

print("\n=== ITEM (c) Médias mínimas de julho (07) ===")
print(medias_minimas_mes(7))

print("\n=== ITEM (e) Média geral das mínimas em julho ===")
print(media_geral_minima(7))

print("\n=== ITEM (d) Gráfico para julho ===")
grafico_minimas(7)

print("\nPara executar o ITEM (a), chame a função: visualizar_intervalo()")
visualizar_intervalo()
